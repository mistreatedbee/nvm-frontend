{
  "name": "ndingoho-vendor-markets",
  "version": "1.0.0",
  "description": "Multi-vendor marketplace platform - NVM",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
